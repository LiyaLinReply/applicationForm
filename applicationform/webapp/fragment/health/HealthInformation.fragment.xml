<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.ui.unified"
>

    <VBox  width="100%">
        <VBox width="100%" class="sapUiContentPadding">
            <Title class="sapUiSmallMarginBottom"  text="{i18n>HealthInfoTitle}" />
            <HBox class="sapUiSmallMarginBottom"  justifyContent="SpaceBetween">
                <VBox width="30%" >
                    <Label text="{i18n>HealthInfoChooseDietaryPreferences}" wrapping="true"/>
                    <Button width="100%" text="{i18n>HealthInfoChooseDietary}" press="onSelectDietaryPreferencesButtonPress"/>
                    <TextArea rows="3" width="100%" editable="false" value="{SelectedDietaries>/choosedValues}"/>
                    <TextArea rows="3" width="100%" visible="{HealthInfoNotMandatory>/noteDietaryOther}" value="{HealthInfoNotMandatory>/noteDietary}"/>
                </VBox>
                <VBox width="30%" >
                    <Label text="{i18n>HealthFoodAllergies}" wrapping="true"/>
                    <Select forceSelection="false"
                        change="onChooseFoodAllergies" 
                        items="{
                            path: 'FoodAllergieList>/results'
                        }" 
                        width="100%">
                        <core:Item key="{FoodAllergieList>ID}" text="{FoodAllergieList>foodAllergie}"/>
                    </Select>
                    <TextArea rows="3" width="100%" visible="{HealthInfoNotMandatory>/foodAllergieYes}" value="{HealthInfoNotMandatory>/noteFoodAllergie}"/>
                </VBox>
                <VBox width="30%" >
                    <Label text="{i18n>HealthOtherAllergies}" wrapping="true"/>
                    <Select forceSelection="false"
                        change="onChooseOtherAllergies" 
                        items="{
                            path: 'OtherAllergieList>/results'
                        }" 
                        width="100%">
                        <core:Item key="{OtherAllergieList>ID}" text="{OtherAllergieList>otherAllergie}"/>
                    </Select>
                    <TextArea rows="3" width="100%" visible="{HealthInfoNotMandatory>/otherAllergieYes}" value="{HealthInfoNotMandatory>/noteAllergie}"/>

                </VBox>
            </HBox>
            <HBox class="sapUiSmallMarginBottom"  justifyContent="SpaceBetween">
                <VBox width="30%" >
                    <Label text="{i18n>HealthImpairments}" wrapping="true"/>
                    <Select forceSelection="false"
                        change="onChooseHealthImpairments" 
                        items="{
                            path: 'MedicalConditionList>/results'
                        }" 
                        width="100%">
                        <core:Item key="{MedicalConditionList>ID}" text="{MedicalConditionList>medCond}"/>
                    </Select>
                    <TextArea width="100%" rows="3" visible="{HealthInfoNotMandatory>/medicalConditionYes}" value="{HealthInfoNotMandatory>/noteAllergie}"/>
                </VBox>
                <VBox width="30%" >

                </VBox>
                <VBox width="30%" >

                </VBox>
            </HBox>


        </VBox>

    </VBox>
    
</core:FragmentDefinition>
