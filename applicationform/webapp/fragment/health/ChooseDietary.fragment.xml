<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <SelectDialog
        title="{i18n>HealthInfoSelectDietaryDialog}"
        busyIndicatorDelay="0"
        showClearButton="true"
        contentHeight="40%"
        contentWidth="40%"
        multiSelect="true"
        growingThreshold="20"
        items="{
            path: 'DietaryPreferenceList>/results'
        }"
        search=".onGeneralSelectDialogSearch"
        confirm=".onChooseDietarySelectConfirm"
        cancel=".onGeneralSelectDialogCancel"
        class="sapUiResponsivePadding--header sapUiResponsivePadding--subHeader sapUiResponsivePadding--footer"
    >
        <StandardListItem
            title="{DietaryPreferenceList>preference}"
            type="Active"
        />
    </SelectDialog>
</core:FragmentDefinition>